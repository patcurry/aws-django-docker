{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "db",
            "image": "postgres",
            "essential": true
        },
        {
            "name": "web",
            "image": "patcurry/aws-django-docker",
            "essential": true,
            "command": [
                "python3",
                "manage.py",
                "runserver",
                "0.0.0.0:8000"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "web"
                    "containerPath": "/src",
                }
            ],
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "name": "web",
            "host": {
                "sourcePath": "."
            }
        }
    ]
}
